########################################################
###### MONGODB CONFIGURATION
########################################################
# Porta NÃO padrão para o Mongo exposto no host
MONGO_PORT=27018

# Credenciais de root (administrador) do Mongo
MONGO_ROOT_USERNAME=meuqueridoroot
MONGO_ROOT_PASSWORD=minhasenha

# Banco e usuário de APLICAÇÃO (princípio do menor privilégio)
MONGO_APP_DB=appdb
MONGO_APP_USER=appuser
MONGO_APP_PASS=password

########################################################
###### BACKEND CONFIGURATION
########################################################
# API
APP_PORT=8098

# Conexão interna da API para o Mongo (usa o nome do serviço 'mongodb' e a porta do compose)
MONGO_URI=mongodb://${MONGO_APP_USER}:${MONGO_APP_PASS}@mongodb:${MONGO_PORT}/${MONGO_APP_DB}?authSource=${MONGO_APP_DB}
MONGO_DB=${MONGO_APP_DB}
APP_ENV=production

########################################################
###### FRONTEND CONFIGURATION
########################################################